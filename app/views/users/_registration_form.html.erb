<h1>Please Register</h1>
<%= form_with(model: @user, local: true, url: {action: 'create'}) do |form|%>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= form.submit 'Register' %>
  </div>
<%end%>
<p>If you already have an account, please <%= link_to 'Login', login_path(register: false)%>
